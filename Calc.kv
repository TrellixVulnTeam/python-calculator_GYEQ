<Calcky>:
    
    BoxLayout:
        orientation:"vertical"
        background_color:(0,1,0,1)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos
        size: root.width, root.height
        TextInput:
            font_size:80
            halign:"right"
            text:"0"
            size_hint:(1,0.2)
            pos_hint:{"y":0.8}
            id:tex_in
    
        
        GridLayout:
            cols:4
            rows:5
            Button:
                size_hint:(.2,.2)
                text:"C"
                on_press:root.erase()
            Button:
                size_hint:(.2,.2)
                text:"CE"
                on_press:root.erase_last()
            Button:
                size_hint:(.2,.2)
                text:"%"
                on_press:root.percentage()
            Button:
                size_hint:(.2,.2)
                text:"+"
                on_press:root.add()
            Button:
                size_hint:(.2,.2)
                text:"7"
                on_press:root.seven()
            Button:
                size_hint:(.2,.2)
                text:"8"
                on_press:root.eight()
            Button:
                size_hint:(.2,.2)
                text:"9"
                on_press:root.nine()
            Button:
                size_hint:(.2,.2)
                text:"X"
                on_press:root.multiply()
            Button:
                size_hint:(.2,.2)
                text:"4"
                on_press:root.four()
            Button:
                size_hint:(.2,.2)
                text:"5"
                on_press:root.five()
            Button:
                size_hint:(.2,.2)
                text:"6"
                on_press:root.six()
            Button:
                size_hint:(.2,.2)
                text:"-"
                on_press:root.minus()
            Button:
                size_hint:(.2,.2)
                text:"3"
                on_press:root.three()
            Button:
                size_hint:(.2,.2)
                text:"2"
                on_press:root.two()
            Button:
                size_hint:(.2,.2)
                text:"1"
                on_press:root.one()
            Button:
                size_hint:(.2,.2)
                text:"+/-"
                on_press:root.minus_plus()
            Button:
                size_hint:(.2,.2)
                text:"/"
                on_press:root.divide()
            Button:
                size_hint:(.2,.2)
                text:"0"
                on_press:root.zero()
            Button:
                size_hint:(.2,.2)
                text:"="
                on_press:root.equals()
            Button:
                size_hint:(.2,.2)
                text:"."
                on_press:root.dot()
            

            
            